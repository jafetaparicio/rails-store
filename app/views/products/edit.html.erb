<h1>Edit Product</h1>

<%= form_tag "/products/#{@products.id}", method: :put do %>
  <div class="form-group">
      <%= text_field_tag :name, @products.name, placeholder: 'Name', class: 'form-control' %>
  </div>
    <div class="form-group">
      <%= text_field_tag :description, @products.description, placeholder: 'Description', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :picture_url, @products.picture_url, placeholder: 'Picture URL', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= text_field_tag :price, @products.price, placeholder: 'Price', class: 'form-control' %>
    </div>
    <%= submit_tag 'Save', class: 'btn btn-default' %>
<% end %>