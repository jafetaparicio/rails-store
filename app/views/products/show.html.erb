<div class="media">
  <div class="media-left">
    <a href="#">
      <img class="media-object product-main" src="<%= @product.picture_url %>" alt="...">
    </a>
  </div>
  <div class="media-body">
    <h2 class="media-heading"><%= link_to product.name, "/products/#{product.id}" %></h2>
    <%= @products.description %>
    <hr>
    <h4>Price: $<%= @products.price %></h4>
    <%= link_to 'Edit', "/product/#{product.id}/edit", class: 'btn btn-default' %>
  </div>
</div>